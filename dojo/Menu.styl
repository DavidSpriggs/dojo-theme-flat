.{$theme-name} .dijitMenuItemDisabled .dijitMenuItemIconCell {
	opacity: 1
}

/* the checked icon */

.{$theme-name} .dijitCheckedMenuItemIconChar {
	display: none
}
.{$theme-name} .dijitCheckedMenuItemIcon {
	background-image: url($image-form-checkbox-and-radios)
	background-repeat:no-repeat
	background-position: -15px 50%
	width:15px
	height:16px
}

.{$theme-name} .dijitCheckedMenuItemChecked .dijitCheckedMenuItemIcon {
	background-position: 0 50%
}


.{$theme-name} .dijitMenuPreviousButton, .{$theme-name} .dijitMenuNextButton {
	font-style: italic
}

/* Menu Bar */

.{$theme-name} .dijitMenuBar {
	border: $menubar-border
	margin: 0
	padding: 0
	background: $menubar-background
}

.{$theme-name} .dijitMenuBar .dijitMenuItem {  
	padding: $menubar-item-padding
	color: $menubar-text-color
	font-size: $menubar-item-font-size
	font-weight: $menubar-item-font-weight
	text-transform: $menubar-item-text-transform
	line-height: $menubar-item-line-height
	margin: 0
	border-bottom: $menubar-item-border-bottom
}	
 
.{$theme-name} .dijitMenuBar .dijitMenuItemHover {
	background: $menubar-item-hover-background
	border-bottom: $menubar-item-hover-border-bottom
}

.{$theme-name} .dijitMenuBar .dijitMenuItemActive {
	background: $menubar-item-active-background
	border-bottom: $menubar-item-hover-border-bottom
}

.{$theme-name} .dijitMenuBar .dijitMenuItemSelected,
.{$theme-name} .dijitMenuBar .dijitMenuItemHover.dijitMenuItemSelected,
.{$theme-name} .dijitMenuBar .dijitMenuItemActive.dijitMenuItemSelected {
	color: $menubar-item-selected-text-color
	background: $menubar-item-selected-background
	border-bottom: $menubar-item-selected-border-bottom
	box-shadow: $menubar-item-selected-box-shadow
}

.{$theme-name} .dijitMenuBar .dijitMenuItem.hasSubMenu {  
	padding-right: 35px
	position: relative
}	

.{$theme-name} .dijitMenuBar .dijitMenuItem.hasSubMenu:after {  
	position: absolute
	top: 18px
	right: 10px
	content: ""
	background: url("images/glyphicons-halflings-white.png") no-repeat -313px -119px
	width: 14px
	height: 14px
}	

.{$theme-name} .dijitMenuBar .dijitMenuItemSelected.hasSubMenu:after {  
	background-image: url("images/glyphicons-halflings-white.png")
}	

/* MenuBar Dropdown */

.{$theme-name} .dijitMenuPopup {
	border-top-left-radius: 0
	border-top-right-radius: 0
}

.{$theme-name} .dijitMenuPopup .dijitMenu {
	border-top: $menubar-popup-border-top
	margin-top: - $menubar-item-border-bottom[0]
	/*min-width: $menubar-popup-min-width*/
	border-top-left-radius: 0
	border-top-right-radius: 0
}
.{$theme-name} .dijitMenuPopup .dijitMenuItem, 
.{$theme-name} .dijitMenuPopup .dijitMenuItem td {
	padding: $menubar-popup-item-padding
}