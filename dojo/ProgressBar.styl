/* ProgressBar
 * 
 * Styling of the ProgressBar consists of the following:
 * 
 * 1. the base progress bar
 *		.dijitProgressBar -	sets margins for the progress bar
 *
 * 2. the empty bar
 *		.dijitProgressBarEmpty  - sets background img and color for bar or parts of bar that are not finished yet
 *		Also sets border color for whole bar
 *
 * 3. tile mode
 * 		.dijitProgressBarTile
 *		inner container for finished portion when in 'tile' (image) mode 
 * 	
 * 4. full bar mode
 * 		.dijitProgressBarFull
 *		adds border to right side of the filled portion of bar
 *
 * 5. text for label of  bar
 *		.dijitProgressBarLabel - sets text color, which must contrast with both the "Empty" and "Full" parts. 
 * 	
 * 6. indeterminate mode
 *		.dijitProgressBarIndeterminate .dijitProgressBarTile 
 * 		sets animated gif for the progress bar in 'indeterminate' mode
 */

@import "../variables"

.{$theme-name} .dijitProgressBar {
	margin:2px 0 2px 0;
}
.{$theme-name} .dijitProgressBarEmpty {
	background-color: mix(#F5F5F5,#F9F9F9, 60%);;
	linear-gradient(#F5F5F5 0, #F9F9F9 100%);
	box-shadow: inset 0 1px 2px rgba(0,0,0,.1);
	border-radius: $base-border-radius; 
	border-color: $progressbar-border-color;
}

.{$theme-name}  .dijitProgressBarTile {	
	background: url($image-progressbar-strps) repeat-x top;
	animation: progress-bar-stripes 2s linear infinite;
} 

.dj_ie6 .{$theme-name} .dijitProgressBarTile {
	background-image: none;
} 
.{$theme-name} .dijitProgressBarFull {
	background-color: #0E90D2;
	linear-gradient(#149BDF 0, #0480BE 100%); 
	transition-property: width;
	transition-duration: .25s;
}
.{$theme-name} .dijitProgressBarLabel {
	text-shadow: $alternative-text-shadow;
	color: $white-text-color;

}

/* Progress Animation */
@keyframes progress-bar-stripes {
  from { background-position: 40px 0; }
  to { background-position: 0 0; }
}

