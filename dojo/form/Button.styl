.{$theme-name} .dijitComboButtonDisabled .dijitArrowButton{ 
	border-left-width: 0
}
/* for ComboButton */
.{$theme-name} table.dijitComboButton {
	border-collapse: separate	/* override dijit.css so that ComboBox rounded corners work */
}

.{$theme-name} .dijitComboButton .dijitStretch {
	border-radius: $border-radius 0 0 $border-radius
}
.{$theme-name} .dijitComboButton .dijitArrowButton {
	border-radius: 0 $border-radius $border-radius 0
	border-left-width: 0
}
