@import "../../../variables"

.esriLegendService {
	padding-top: $map-legend-padding
	margin-bottom: $map-legend-padding
	border-top: $map-legend-separator
}

.esriLegendService:first-child {
	padding-top: 0
	border:0
}

.esriLegendService:last-child {
	margin-bottom: 0
}

.esriLegendServiceLabel {
	display: block
	font-weight: bold
	color: $map-legend-service-name-text-color
	padding-bottom: $map-legend-service-name-padding-bottom
	position: relative
	width: 100%
}

.esriLegendServiceLabel:after {
    border-top: $map-legend-service-name-border-bottom
    bottom: 0
    content: ""
    display: block
    height: 0
    left: 0
    position: absolute
    width: 100%
}

.esriLegendLayerLabel {
	color: $map-legend-layer-name-text-color
	padding-left: $map-legend-padding * 2
}

.esriLegendLayer {
	padding-left: $map-legend-padding * 2
}

.esriLegendGroupLayer {
	padding-top: $map-legend-padding * 2
}

.esriLegendLeft {
	padding-left: $map-legend-padding * 3
}

.esriLegendRight {
	padding-right: $map-legend-padding * 3
}
