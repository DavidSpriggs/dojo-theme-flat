// specifically applied to the vertical slider are defined at the last of this section
 
$slider-text-color								=						$text-color							//text color for labeling
$slider-disabled-text-color						=						$disabled-text-color

// outer container, only normal styles are offered

$slider-container-background					=						transparent
$slider-container-padding						=						0
$slider-container-border						=						0 none
$slider-container-border-radius					=						0
$slider-container-box-shadow					=						none

//// bar 

$slider-bar-width								=						6px										// the height for the horizontal slider and the width for the vertical slider
