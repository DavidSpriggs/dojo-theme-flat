$slider-hovered-fullbar-vertical-background				=						$slider-fullbar-vertical-background															
$slider-hovered-fullbar-vertical-box-shadow				=						$slider-fullbar-vertical-box-shadow
$slider-hovered-remainingbar-vertical-border-color		=						$slider-remainingbar-vertical-border-color
$slider-hovered-remainingbar-vertical-background		=						$slider-remainingbar-vertical-background														
$slider-hovered-remainingbar-vertical-box-shadow		=						$slider-remainingbar-vertical-box-shadow

