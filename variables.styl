//
// theme name
//
// don't forget to also change the file names of "bootstrap.css" and "bootstrap_rtl.css"
// and change dojo/dijit.css line 398: ".bootstrap .dijitSelect .dijitArrowButton" to ".{your theme name} .dijitSelect .dijitArrowButton"
 
$theme-name										=						flat							

// colors

$primary-color									=						#f5f5f5													// Base color for entire theme

$black-color									=						#000
$white-color									=						#fff
$gray-color										=						#969696
$light-gray-color								=						#B4B4B4
$super-light-gray-color							=						#f5f5f5

$green-color									=						#35AC46
$dark-blue-color								=						#004575
$light-blue-color								=						#007AC2
$yellow-color									=						#F89927
$red-color										=						#DA4D1E

$transparent-black-color1						=						rgba(0, 0, 0, 0.65)
$transparent-black-color2						=						rgba(0, 0, 0, 0.05)
$transparent-black-color3						=						rgba(0, 0, 0, 0.25)

$disabled-color									=						$primary-color
$error-color									=						$red-color
$highlight-color								=						$light-blue-color

// icons

$icon-font-family								=						FontAwesome

icon-core-style() {
	font-family: $icon-font-family
	font-style: normal
	font-weight: normal
	text-decoration: inherit
	text-decoration: inherit
	vertical-align: bottom
}

// font

$text-color										=						$black-color											//default font color
$inverse-text-color								=						$white-color											//inverse font color
$selected-text-color							=						$inverse-text-color										//selected font color (e.g. text within a selected menu item, selected tab, etc.)
$disabled-text-color							=						$gray-color												//disabled font color
$line-height									=						20px
$text-shadow									=						0 1px 1px rgba(255, 255, 255, 0.75)
$inverse-text-shadow							=						0 -1px 0 rgba(0, 0, 0, 0.25)

// container 

$container-background-color						=						$white-color
$inverse-container-background-color				=						$black-color
$border-color									=						$light-gray-color							
$disabled-border-color							=						$border-color
$border-radius									=						2px
$padding										=						4px
$container-shadow								=						0 2px 3px rgba(0, 0, 0, 0.15)					
$pane-shadow									=						0 0 2px white inset, 0 0 2px rgba(0, 0, 0, 0.2)	

// button arrow
// TODO: remove to use font icons

$dijit-arrow-color								=						$text-color
$dijit-arrow-thickness							=						4px

// advanced configuration

$highlight-background							=						$highlight-color
$lighten-border-color							=						lighten($border-color, 65%)
$lighten-highlight-color						=						lighten($highlight-color, 35%)
$secondary-container-background-color			=						$primary-color								// dialog action bar at bottom	

/****************************************************************************************
 ***************************************** Form *****************************************
 ***************************************************************************************/

/****************************************************************************************
 * Button (default)
 ****************************************************************************************/

$button-padding									=						$padding $padding * 3
$button-border-radius							=						$border-radius

//// normal

$button-border									=						1px solid rgba(0, 0, 0, 0.15)
$button-text-color								=						$text-color
$button-text-shadow								=						$text-shadow
$button-background								=						linear-gradient(#fcfcfc, $primary-color)
$button-shadow									=						none

//// hover

$button-hover-border							=						1px solid rgba(0, 0, 0, 0.15)
$button-hover-text-color						=						$button-text-color
$button-hover-text-shadow						=						$button-text-shadow
$button-hovered-background						=						linear-gradient(#fff 0%, darken($primary-color, 2%) 100%)
$button-hovered-shadow							=						0 1px 1px rgba(0,0,0,0.1)

//// active

$button-active-border							=						$button-hover-border
$button-active-text-color						=						$button-text-color
$button-active-text-shadow						=						$button-text-shadow
$button-active-background						=						$button-hovered-background
$button-active-shadow							=						0 1px 3px rgba(0, 0, 0, 0.15) inset

//// disabled

$button-disabled-border							=						$button-border
$button-disabled-text-color						=						$button-text-color
$button-disabled-text-shadow					=						$button-text-shadow
$button-disabled-background						=						$disabled-color
$button-disabled-shadow							=						none

