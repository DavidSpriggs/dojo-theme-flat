//// hover

$input-hover-border								=						1px solid $highlight-color
$input-hover-background							=						$input-background
$input-hover-shadow								=						$input-shadow

///// focused

$input-focused-border							=						1px solid rgba($highlight-color, 0.8)
$input-focused-background						=						$input-background
$input-focused-shadow							=						$input-highlight-shadow

/////// focused on error state

$input-focused-error-border						=						1px solid darken($error-color, 5)
$input-focused-error-background					=						$input-background
$input-focused-error-shadow						=						$input-shadow

///// disabled

$input-disabled-border							=						$input-border
$input-disabled-background						=						$disabled-color
$input-disabled-shadow							=						none

///// error

$input-error-border								=						1px solid $error-color
$input-error-background							=						$input-background
$input-error-shadow								=						$input-shadow

////// error icon

$input-error-icon-width							=						9px									// the width of the error icon contianer
$input-error-icon-background-color				=						$error-color

/****************************************************************************************
 * CheckBox (and Checkbox Icon)
 ****************************************************************************************/

$checkbox-height								=						20px
$checkbox-width									=						20px
$checkbox-padding								=						0
$checkbox-border-radius							=						3px

////  normal

$checkbox-background-color						=						$primary-color						// only single color is accepted because background-image is used for the check icon
$checkbox-border								=						0 none
$checkbox-box-shadow							=						0 0 2px rgba(0, 0, 0, 0.35) inset

//// checked

$checkbox-checked-icon-color					=						$white-color
$checkbox-checked-background-color				=						$highlight-color
$checkbox-checked-border						=						$checkbox-border
$checkbox-checked-box-shadow					=						$checkbox-box-shadow

//// hover

////// over unchecked

$checkbox-hover-unchecked-background-color		=						lighten($checkbox-background-color, 25%)
$checkbox-hover-unchecked-border				=						$checkbox-border
$checkbox-hover-unchecked-box-shadow			=						$checkbox-box-shadow

////// over checked

$checkbox-hover-checked-background-color		=						lighten($checkbox-checked-background-color, 25%)
$checkbox-hover-checked-border					=						$checkbox-border
$checkbox-hover-checked-box-shadow				=						$checkbox-box-shadow

//// disabled

$checkbox-disabled-background-color				=						$checkbox-background-color
$checkbox-disabled-border						=						$checkbox-border
$checkbox-disabled-box-shadow					=						$checkbox-box-shadow

//// Checkbox icon (within a widget, e.g. toggle button)

$checkbox-icon-padding							=						0

/****************************************************************************************
 * Radio (and Radio Icon)	the styles are using pure CSS
 ****************************************************************************************/

$radio-height									=						16px
$radio-width									=						16px
$radio-padding									=						0
$radio-border-radius							=						99px

////  normal

$radio-background-color							=						$primary-color						// only single color is accepted because background-image is used for the check icon
$radio-border									=						0 none
$radio-box-shadow								=						0 0 2px rgba(0, 0, 0, 0.35) inset

//// checked

////// icon: these are applied to the checked icon
$radio-checked-icon-background					=						linear-gradient(lighten($highlight-color,4) 0, darken($highlight-color,6) 100%)
$radio-checked-icon-height						=						8px
$radio-checked-icon-width						=						8px
$radio-checked-icon-border-radius				=						99px
$radio-checked-icon-box-shadow					=						0 0 1px rgba(0, 0, 0, 0.3)

//// hover

////// over unchecked

$radio-hover-unchecked-background-color			=						lighten($radio-background-color, 25%)
$radio-hover-unchecked-border					=						$radio-border
$radio-hover-unchecked-box-shadow				=						$radio-box-shadow

////// icon

$radio-hover-checked-icon-background			=						linear-gradient(lighten(lighten($highlight-color, 25%),4) 0, darken(lighten($highlight-color, 25%),6) 100%)
$radio-hover-checked-icon-box-shadow			=						$radio-checked-icon-box-shadow

//// disabled

$radio-disabled-background-color				=						$radio-background-color
$radio-disabled-border							=						$radio-border
$radio-disabled-box-shadow						=						$radio-box-shadow

////// icon

$radio-disabled-checked-icon-background			=						linear-gradient(lighten($disabled-color,4) 0, darken($disabled-color,6) 100%)
$radio-disabled-checked-icon-box-shadow			=						$radio-checked-icon-box-shadow

/****************************************************************************************
 * Select (only for the button node, the dropdown styles are defined in the Menu section)	
 ****************************************************************************************/

$select-padding									=						$button-padding

// select button's normal, hover, and disabled status styles are the same as "Button"

//// focus 
$select-focus-border							=						$button-border						// this is applied to the select root node
$select-focus-background						=						$button-background					// this is applied to the select button node
$select-focus-box-shadow						=						none								// this is applied to the select button node

/****************************************************************************************
 * Slider
 ****************************************************************************************/

