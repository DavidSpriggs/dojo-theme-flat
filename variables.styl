push($button-alternative-colors, (dojo-btn-warning (background-color $yellow-color) (background-image linear-gradient(to bottom, lighten($yellow-color, 3%), $yellow-color)) (color $inverse-text-color) (text-shadow $inverse-text-shadow)));
